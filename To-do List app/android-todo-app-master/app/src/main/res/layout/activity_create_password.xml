<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Set Password"
                android:textColor="@color/accent"
                android:textSize="@dimen/dimen_15dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/firstET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:lines="1"
                    android:hint="-"
                    android:padding="10dp"
                    android:textColor="@color/accent"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/secondET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:hint="-"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"

                    android:textColor="@color/accent"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/thirdET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="-"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:lines="1"
                    android:textColor="@color/accent"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/forthET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:hint="-"
                    android:padding="10dp"
                    android:lines="1"
                    android:textColor="@color/accent"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/fifthET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:hint="-"
                    android:padding="10dp"
                    android:lines="1"
                    android:textColor="@color/accent"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/sixthET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:hint="-"
                    android:lines="1"
                    android:padding="10dp"
                    android:textColor="@color/accent"
                    android:textSize="16dp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textColor="@color/accent"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <EditText
                        android:id="@+id/firstConfirmET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:lines="1"
                        android:hint="-"
                        android:padding="10dp"
                        android:textColor="@color/accent"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/secondConfirmET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:lines="1"
                        android:hint="-"
                        android:textColor="@color/accent"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/thirdConfirmET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:lines="1"
                        android:hint="-"
                        android:textColor="@color/accent"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/forthConfirmET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"

                        android:padding="10dp"
                        android:lines="1"
                        android:hint="-"
                        android:textColor="@color/accent"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/fifthConfirmET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:lines="1"
                        android:hint="-"
                        android:textColor="@color/accent"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/sixthConfirmET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:lines="1"
                        android:hint="-"
                        android:textColor="@color/accent"
                        android:textSize="16dp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_20dp"
            >

            <Button
                android:layout_width="@dimen/dimen_180dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnNext"
                android:visibility="visible"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@color/accent"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
