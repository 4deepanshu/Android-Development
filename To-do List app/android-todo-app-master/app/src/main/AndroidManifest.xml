        <activity android:name=".ui.main.LockActivity"></activity>
        <activity android:name=".ui.main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.CompletedTask"
            android:label="Completed Tasks"></activity>
