<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rg.milkwala.view.activities.HomeActivity"
    tools:showIn="@layout/activity_homeactivit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/dimen_30_dp"
            android:id="@+id/horizontalScroll">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
           <com.rg.milkwala.view.controls.ButtonRegular
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mobile"
               android:textColor="@android:color/black"
               android:id="@+id/btnMobile"
               android:layout_marginRight="@dimen/dimen_10dp"
               android:layout_marginLeft="@dimen/dimen_10dp"
               android:textAllCaps="false"
               android:background="@drawable/category_drawable"
               />
            <com.rg.milkwala.view.controls.ButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop"
                android:id="@+id/btnLaptop"
                android:textColor="@android:color/black"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textAllCaps="false"
                android:background="@drawable/category_drawable"
                />
            <com.rg.milkwala.view.controls.ButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watches"
                android:textColor="@android:color/black"
                android:id="@+id/btnWatches"

                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textAllCaps="false"
                android:background="@drawable/category_drawable"
                />
            <com.rg.milkwala.view.controls.ButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TV"
                android:textColor="@android:color/black"
                android:id="@+id/btnTv"

                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textAllCaps="false"
                android:background="@drawable/category_drawable"

                />
            <com.rg.milkwala.view.controls.ButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gadgets"
                android:textColor="@android:color/black"
                android:id="@+id/btnGadget"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textAllCaps="false"
                android:background="@drawable/category_drawable"
                />

                <com.rg.milkwala.view.controls.ButtonRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@android:color/black"
                    android:id="@+id/btnAll"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/category_drawable"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <com.rg.milkwala.view.controls.TextViewBold
            android:id="@+id/textviewTitle"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="This is for the testing purpose"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textSize="13dp" />
        <com.rg.milkwala.view.controls.TextViewRegular
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:visibility="gone"
            android:id="@+id/textviewDiscription"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontalScroll" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerView"
            android:layout_marginTop="10dp"
            android:background="#ECF0F9"
            android:nestedScrollingEnabled="true"
            android:layout_below="@id/textviewDiscription"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
