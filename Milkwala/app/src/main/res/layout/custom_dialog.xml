<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <com.rg.milkwala.delivery.view.custom_controls.EditTextRegular
        android:layout_width="match_parent"
        android:id="@+id/editTextQuantity"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="20dp" />
    <com.rg.milkwala.delivery.view.custom_controls.TextViewRegular
        android:layout_width="wrap_content"
        android:id="@+id/textViewQuantity"
        android:layout_height="wrap_content"
        android:text="Qunatity"
        android:textSize="14dp" />

    <com.rg.milkwala.delivery.view.custom_controls.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="240"
        android:id="@+id/textViewPrice"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <com.rg.milkwala.delivery.view.custom_controls.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price"
        android:textSize="14dp" />

    <com.rg.milkwala.delivery.view.custom_controls.ButtonRegular
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonclick_login"
        android:text="Ok"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:id="@+id/buttonOk"
        />
</LinearLayout>
</LinearLayout>