<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info"
    android:layout_width="match_parent"
    android:focusable="false"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="com.rg.milkwala.view.activities.PersonalInfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbarThumbVertical="@null"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:background="@drawable/login_bgg"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2.25"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/login_logo"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=".75"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/bigmillk"
                android:layout_height="match_parent">
                <com.rg.milkwala.view.controls.TextViewBold
                    android:layout_marginTop="80dp"
                    android:layout_width="match_parent"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:id="@+id/textViewAddaddresss"
                    android:text="@string/addAddress"
                    android:layout_height="wrap_content" />
                <com.rg.milkwala.view.controls.TextViewRegular
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/text_colour"
                    android:layout_marginRight="10dp"
                    android:text="this is for testing purpose it is working fine . this is good application"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_drawable"
                    android:layout_height="wrap_content">
                    <com.rg.milkwala.view.controls.EditTextRegular
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:hint="Address"
                        android:enabled="false"
                        android:layout_gravity=""
                        android:drawableLeft="@drawable/address"
                        android:drawablePadding="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:id="@+id/editTextAddess"
                        android:textColor="@color/text_colour"
                        android:inputType="textPostalAddress"
                        android:textColorHint="@color/text_colour"
                        android:layout_height="wrap_content" />
                    <com.rg.milkwala.view.controls.TextViewRegular
                        android:layout_width="wrap_content"
                        android:text="Select Loctaion"
                        android:id="@+id/textviewSelectlocation"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.rg.milkwala.view.controls.TextViewRegular
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="13dp"
                    android:drawableLeft="@drawable/city"
                    android:drawablePadding="10dp"
                    android:hint="City"
                    android:textColor="@color/text_colour"
                    android:inputType="textPostalAddress"
                    android:id="@+id/textViewCity"
                    android:layout_gravity="center"
                    android:textColorHint="@color/text_colour"
                    android:background="@drawable/edittext_drawable"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content" />
                <com.rg.milkwala.view.controls.EditTextRegular
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="13dp"

                    android:drawableLeft="@drawable/state"
                    android:drawablePadding="10dp"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/text_colour"
                    android:id="@+id/editTextState"
                    android:hint="State"
                    android:layout_gravity="center"
                    android:textColorHint="@color/text_colour"
                    android:background="@drawable/edittext_drawable"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content" />

                <com.rg.milkwala.view.controls.EditTextRegular
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/pincode"
                    android:drawablePadding="10dp"
                    android:textSize="13dp"
                    android:id="@+id/editTextPincode"
                    android:hint="Pincode"
                    android:layout_gravity="center"
                    android:textColorHint="@color/text_colour"
                    android:background="@drawable/edittext_drawable"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:inputType="phone"
                    android:textColor="@color/text_colour"
                    android:layout_height="wrap_content" />

                <com.rg.milkwala.view.controls.EditTextRegular
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:textSize="13dp"
                    android:hint="Country"
                    android:drawableLeft="@drawable/country"
                    android:drawablePadding="10dp"
                    android:id="@+id/editTextCountry"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/text_colour"
                    android:layout_gravity="center"
                    android:textColorHint="@color/text_colour"
                    android:background="@drawable/edittext_drawable"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content" />

                <com.rg.milkwala.view.controls.ButtonRegular
                    android:id="@+id/buttonUpdateNewAddress"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonclick_login"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <com.rg.milkwala.view.controls.TextViewRegular
                    android:id="@+id/helping_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="This is for testing purpose are u happy with app?"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
