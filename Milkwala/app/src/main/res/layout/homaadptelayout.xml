<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_gravity="center"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="80dp"
           android:id="@+id/imageviewProduct"
           android:layout_height="120dp" />
       <com.rg.milkwala.delivery.view.custom_controls.TextViewRegular
           android:layout_width="wrap_content"
           android:id="@+id/textViewUserID"
           android:text="aaaadsdfsdfsdf"
           android:textSize="20dp"
           android:textColor="@color/colorAccent"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@+id/imageviewProduct"
           android:layout_height="wrap_content" />
       <com.rg.milkwala.delivery.view.custom_controls.TextViewRegular
           android:layout_width="wrap_content"
           android:text="Desi Ghee"
           android:layout_marginTop="5dp"
           android:layout_below="@+id/textViewUserID"
           android:textSize="18dp"
           android:id="@+id/textViewProductName"
           android:textColor="@color/colorAccent"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@+id/imageviewProduct"
           android:layout_height="wrap_content" />
       <com.rg.milkwala.delivery.view.custom_controls.TextViewRegular
           android:layout_width="wrap_content"
           android:layout_below="@id/textViewProductName"
           android:layout_marginTop="2dp"
           android:textSize="16dp"
           android:text="2 quantity"
           android:id="@+id/textViewQuantity"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@+id/imageviewProduct"
           android:layout_height="wrap_content" />
       <com.rg.milkwala.delivery.view.custom_controls.TextViewRegular
           android:layout_width="wrap_content"
           android:layout_toRightOf="@+id/imageviewProduct"
           android:id="@+id/textViewPrice"
           android:textSize="16dp"
           android:text="240 Rs."
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           android:textColor="@color/colorAccent"
           android:layout_below="@+id/textViewQuantity"
           android:layout_height="wrap_content" />
   </RelativeLayout>

</LinearLayout>