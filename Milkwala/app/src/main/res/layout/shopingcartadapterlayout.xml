<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="80dp"
            android:id="@+id/imageViewIcon"
            android:src="@mipmap/ic_launcher"
            android:layout_height="100dp" />
        <RelativeLayout
            android:layout_toRightOf="@+id/imageViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helping"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/helpingLayout"
                android:layout_height="wrap_content">
                <com.rg.milkwala.view.controls.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buffallo Milk"
                    android:id="@+id/textViewProductName"
                    android:textSize="18dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/close"
                    android:padding="5dp"
                    android:id="@+id/imageViewDelete"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <com.rg.milkwala.view.controls.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_below="@+id/helpingLayout"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSubscription"
                android:text="Monthaly Subscription"
                android:textSize="13dp" />
            <RelativeLayout
                android:layout_below="@id/textViewSubscription"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">
                <com.rg.milkwala.view.controls.TextViewBold
                    android:id="@+id/textViewRate"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:text="120 Rs."
                    android:textSize="20dp" />
                <com.rg.milkwala.view.controls.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textViewRate"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/textViewRate"
                    android:text=""
                    android:textSize="12dp" />
                <com.rg.milkwala.view.controls.TextViewRegular
                    android:layout_width="wrap_content"
                    android:text="Quantity:1"
                    android:id="@+id/textViewQuantity"
                    android:textSize="12dp"
                    android:paddingRight="5dp"
                    android:layout_alignBaseline="@+id/textViewRate"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>



