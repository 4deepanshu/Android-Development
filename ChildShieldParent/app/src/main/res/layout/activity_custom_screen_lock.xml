<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenlock_bg"
    tools:context="com.schoolshieldparent_ui.view.activity.Activity_CustomScreenLock">

    <include
        android:id="@+id/header"
        layout="@layout/header_layoutwithbackbutton"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <ListView
            android:id="@+id/listViewCustomLocks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:divider="@null"
            android:dividerHeight="25dp"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
