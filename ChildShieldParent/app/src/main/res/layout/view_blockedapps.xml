<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/imageViewAppIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"/>

        <com.schoolshieldparent_ui.view.custom_controls.TextView_Regular
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/checkboxBlockAppsorNot"
            android:layout_toRightOf="@+id/imageViewAppIcon"
            android:maxLines="2"
            android:text=""
            android:textColor="#fff"
            android:textSize="16dp"/>

        <com.schoolshieldparent_ui.view.custom_controls.TextView_Regular
            android:id="@+id/textViewDescName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/checkboxBlockAppsorNot"
            android:layout_toRightOf="@+id/imageViewAppIcon"
            android:maxLines="2"
            android:text=""
            android:textColor="#fff"
            android:textSize="14dp"
            />

        <CheckBox
            android:enabled="false"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/checkboxBlockAppsorNot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/lockunlock"
            android:button="@null"
            android:scaleType="fitXY"/>
    </RelativeLayout>

</RelativeLayout>