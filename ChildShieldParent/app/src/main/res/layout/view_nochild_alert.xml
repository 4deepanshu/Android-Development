<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/alert"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

    <com.schoolshieldparent_ui.view.custom_controls.TextView_Regular
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="17dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.schoolshieldparent_ui.view.custom_controls.Button_Regular
            android:id="@+id/buttonCreate"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector_alert"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/createChild"
            android:textColor="#ffffff"
            android:textSize="16dp"/>

        <com.schoolshieldparent_ui.view.custom_controls.Button_Regular

            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector_alert"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/cancel"
            android:textColor="#ffffff"
            android:textSize="16dp"/>

    </LinearLayout>

</RelativeLayout>





