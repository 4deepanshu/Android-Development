<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="0dp" />

            <stroke android:width="0.001dp" android:color="#626E9D" />

            <gradient android:angle="-90" android:endColor="#626E9D" android:startColor="#626E9D" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="0dp" />

            <stroke android:width="0.001dip" android:color="#626E9D" />

            <solid android:color="#626E9D" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="0dp" />

            <stroke android:width="0.001dip" android:color="#626E9D" />

            <gradient android:angle="-90" android:endColor="#326E9D" android:startColor="#326E9D" />
        </shape></item>

</selector>